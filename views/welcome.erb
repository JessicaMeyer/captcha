<script>
// mcc @copyright //
      $(document).ready(function() {
        $(document).foundation();
        $(document).on("submit", "#my_form", function (e) {
          var startDate = new Date($('#doa').val());
          var endDate = new Date($('#dod').val());
           //if end date is before start date
          if (startDate > endDate){
              alert("Please enter a later date than the start!");
              return false;
            }
          //if the above conditions fail, the form will be not submitted
      });
    })
    </script>