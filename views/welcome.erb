      <input id="story-title" type="text" name="title" placeholder="your event title">
      </div>
      <label for="event-hashtag">event hashtag:</label>
      <input type="text" id="tag" name="hashtag" placeholder="your event hashtag" />
      <label for="date-of-arrival"> event start date </label>
      <input type="date" name="date-of-arrival" id="doa" autofocus required>
      <label for="date-of-departure"> event end date </label>
      <input type="date" name="date-of-departure" id="dod" autofocus required>
      <button class="btn">Submit</button>
    </form>
